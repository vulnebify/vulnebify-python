    "version": "0.2.0",
    "configurations": [      
        {
            "name": "Debug CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "vulnebify.cli",
            "cwd": "${workspaceFolder}",
            "args": [
                "${input:cliArgs}"
              ],
        }
    ],
    "inputs": [
      {
        "id": "cliArgs",
        "type": "promptString",
        "description": "Enter CLI arguments (e.g. scan run vulnebify.com --ports 80 443 --scanners port)"
      }
    ]
}